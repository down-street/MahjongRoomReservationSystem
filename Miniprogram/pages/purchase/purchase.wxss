.page-container {
  padding: 32rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.reservation-banner {
  background-color: #dff0d8;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.reservation-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.reservation-room {
  font-size: 32rpx;
  font-weight: bold;
}

.reservation-time {
  font-size: 28rpx;
  color: #666;
}
.cancel-button {
  background-color: #f56c6c;
  color: white;
  border: none;
  padding: 20rpx;
  border-radius: 10rpx;
}
.room-card {
  background-color: #ffffff;
  padding: 28rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s;
}

.room-card:active {
  transform: scale(0.98);
}

.room-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333333;
}

.room-desc {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.room-status {
  font-size: 24rpx;
  color: #007aff;
  margin-top: 10rpx;
}

.popup-overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.popup {
  background-color: #fff;
  width: 80%;
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

.picker-label {
  font-size: 30rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.time-value {
  font-weight: bold;
  color: #007aff;
  margin-left: 10rpx;
}

.time-picker-group {
  margin-bottom: 30rpx;
}

.time-preview {
  margin-bottom: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.preview-value {
  font-weight: bold;
  color: #2c7;
  margin-left: 10rpx;
}

.popup-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.confirm-btn {
  flex: 1;
  background-color: #4caf50;
  color: white;
  border-radius: 10rpx;
  padding: 20rpx;
}

.cancel-btn {
  flex: 1;
  background-color: #f56c6c;
  color: white;
  border-radius: 10rpx;
  padding: 20rpx;
}

.reserved-bar {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f0f0f0;
  border-radius: 12rpx;
}

.reserved-bar-title {
  font-weight: bold;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.reserved-slot-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.reserved-slot {
  background-color: #ffcccc;
  color: #a00;
  padding: 8rpx 14rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.no-reserved {
  color: #999;
  font-size: 26rpx;
}


/* 状态：空闲 */
.room-card.available {
  background-color: #e8f5e9; /* 浅绿色 */
  border-left: 12rpx solid #66bb6a;
}

/* 状态：已预约 */
.room-card.reserved {
  background-color: #fff8e1; /* 浅黄色 */
  border-left: 12rpx solid #ffb300;
}

/* 状态：使用中 */
.room-card.in-use {
  background-color: #ffebee; /* 浅红色 */
  border-left: 12rpx solid #e53935;
}

.room-card.cleaning {
  background-color: #24d8c0; /* 浅黄色 */
  border-left: 12rpx solid #1a7971;
}