.page {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding-top: 100rpx;
  background-color: #f2f2f2;
  min-height: 100vh;
}

.card {
  width: 86%;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.input {
  margin-bottom: 30rpx;
  padding: 22rpx;
  border: 1px solid #ddd;
  border-radius: 12rpx;
  font-size: 32rpx;
  background-color: #fafafa;
}

.btn {
  margin-top: 20rpx;
  background-color: #007aff;
  color: #fff;
  font-size: 34rpx;
  padding: 24rpx;
  border-radius: 12rpx;
}
