.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.header {
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  padding: 30rpx 0;
  background-color: #0eb4dd;
  color: white;
}

.product-list {
  flex: 1;
  padding: 20rpx;
  background-color: #f5f5f5;
}

.product-item {
  display: flex;
  align-items: center;
  background-color: white;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 16rpx;
}

.product-image {
  flex:0 0 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1 1 auto;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.product-desc {
  font-size: 26rpx;
  color: #888;
}

.product-action {
  flex:0 0 auto;
  align-items: center;
  justify-content: space-between;
  /* width: 160rpx; */
}

.quantity-control {
  
  align-items: center;
}

.plus-btn, .minus-btn {
  display: inline-block;
  flex: 0 0 auto;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #0eb4dd;
  color: white;
  font-size: 32rpx;
  line-height: 50rpx;
  text-align: center;
  padding: 0;
  margin: 0 10rpx;
}

.item-count-text {
  flex:0 0 auto;
  font-size: 28rpx;
  width: 30rpx;
  text-align: center;
}

.item-count {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: red;
  color: white;
  font-size: 22rpx;
  border-radius: 50%;
  width: 36rpx;
  height: 36rpx;
  text-align: center;
  line-height: 36rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.footer-left {
  font-size: 30rpx;
}

.submit-button {
  background-color: #0eb4dd;
  color: white;
  padding: 10rpx 30rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
}
